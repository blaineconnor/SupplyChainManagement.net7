@model IEnumerable<SCM.UI.Models.DTOs.Categories.CategoryDTO>

@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/SuperAdmin/Views/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.ActionLink("Güncelle", "Edit","Category", new { Area="SuperAdmin", id=item.Id }, new{@class="btn btn-success"})
                    <a href="#" data-id="@item.Id" class="btn btn-danger btnDelete">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>