@model SCM.UI.Models.RequestModels.Accounts.LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Areas/SuperAdmin/Views/_Layout.cshtml";
}

@inject IHttpContextAccessor _contextAccessor

<h1>SignIn</h1>

<h4>LoginVM</h4>
<hr />
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Supply Chain Management</b>Giriş</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                @{
                    if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["error"]
                        </div>
                    }
                }
                <p class="login-box-msg">Kullanıcı bilgileriniz</p>
                <form asp-action="SignIn" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-1">
                        <input asp-for="UserName" name="UserName" class="form-control" placeholder="Kullanıcı adınız" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="input-group mb-1">
                        <input asp-for="Password" name="Password" class="form-control" type="password" placeholder="Parolanız" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="row">
                        <div class="offset-8 col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

</body>