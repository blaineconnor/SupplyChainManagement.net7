@model IEnumerable<SCM.UI.Models.DTOs.Requests.RequestDTO>

@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/SuperAdmin/Views/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HowMany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RejectionReason)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HowMany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RejectionReason)
            </td>
            <td>
                    @Html.ActionLink("Güncelle", "Edit","SuperAdminRequest", new { Area="SuperAdmin", id=item.Id }, new{@class="btn btn-success"})
                    <a href="#" data-id="@item.Id" class="btn btn-danger btnDelete">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>

        $().ready(function () {
            $(".btnDelete").click(function () {
                var id = $(this).attr('data-id')
                console.log(id)
                $.ajax({
                    type: "DELETE",
                    url: "/superadmin/request/delete/" + id,
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (response) {
                        console.log(response)
                        if (response.success) {
                            var tdClassName = "tr-" + id
                            $("." + tdClassName).fadeOut('slow', function () {
                                $(this).remove()
                            })
                        } else {
                            alert(response.errors[0])
                        }
                    },
                    error: function (response) {
                        alert('İstek esnasından sonucu taraflı bir hata oluştu.')
                    }
                })
            })
        })

    </script>
}