@model SCM.UI.Models.RequestModels.Accounts.LoginVM

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Supply Chain Management Giriş Paneli </title>

    <link href="~/SCM/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/SCM/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/SCM/vendors/nprogress/nprogress.css" rel="stylesheet">
    <link href="~/SCM/vendors/animate.css/animate.min.css" rel="stylesheet">

    <link href="~/SCM/build/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form asp-action="SignIn">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" required="" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Şifre" required="" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Giriş Yap" class="btn btn-default submit" />
                        </div>
                        <div class="clearfix"></div>

                        <div class="separator">


                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1> Supply Chain Management</h1>
                                <p>©2023 All Rights Reserved. Supply Chain Management.</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
